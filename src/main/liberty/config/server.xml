<server description="new server">

    <!-- Enable features -->
    <featureManager>
        <feature>webProfile-8.0</feature>
		<feature>localConnector-1.0</feature>
    </featureManager>

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint host="*" httpPort="9081" httpsPort="9443" id="defaultHttpEndpoint"/>
                  
    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>



    <!-- Declare the jar files for MySQL access through JDBC. -->
    <dataSource id="cargo-tracking-service" jndiName="jdbc/trackingmsdb">
        <jdbcDriver libraryRef="MySQLLib"/>
        <properties databaseName="trackingmsdb" password="trackingmsdb" portNumber="3306" 
        serverName="mysql-cargo-dev" serverTimezone="EST" user="trackingmsdb" URL="jdbc:mysql://mysql-cargo-dev:3306/trackingmsdb?zeroDateTimeBehavior=CONVERT_TO_NULL&serverTimezone=EST&useSSL=false&allowPublicKeyRetrieval=true"/>
    </dataSource>
    <library id="MySQLLib">
          <file name="${server.config.dir}/lib/mysql-connector-java-8.0.21.jar"/>
    </library>

  


    <applicationMonitor updateTrigger="mbean"/>

     <webApplication contextRoot="/" id="cargotracker-tracking" location="cargo-tracking-service-1.0.war"/>
</server>
